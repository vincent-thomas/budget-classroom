<div style="display: flex; flex-direction: column; gap: 1rem;">
  <div style="display: flex; align-items: center;">
    <a href="/lists/<%= @list["id"] %>/todos" class="back-button" style="color: black; text-decoration: none; display: flex; align-items: center; font-size: 1.2rem; gap: 0.5rem;">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M20.3284 11.0001V13.0001L7.50011 13.0001L10.7426 16.2426L9.32842 17.6568L3.67157 12L9.32842 6.34314L10.7426 7.75735L7.49988 11.0001L20.3284 11.0001Z" fill="currentColor" style="--darkreader-inline-fill: currentColor;" data-darkreader-inline-fill=""></path>
      </svg>
      <span><%= @list["name"] %></span>
    </a>
  </div>

    <form action="/lists/<%= @list["id"] %>/todos/<%= @todo["id"] %>/update" method="post">
      <input name="name" min="3" value="<%= @todo["name"] %>" style="outline: none; border: none; font-size: 1.5rem; background-color: transparent" />
    </form>
    <form class="delete" action="/lists/<%= @list["id"] %>/todos/<%= @todo["id"] %>/delete" method="post">
      <button type="submit" style="background-color: transparent; border: none; cursor: pointer;">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 11C7.44772 11 7 11.4477 7 12C7 12.5523 7.44772 13 8 13H16C16.5523 13 17 12.5523 17 12C17 11.4477 16.5523 11 16 11H8Z" fill="currentColor" style="--darkreader-inline-fill: currentColor;" data-darkreader-inline-fill=""></path>
          <path fill-rule="evenodd" clip-rule="evenodd" d="M23 12C23 18.0751 18.0751 23 12 23C5.92487 23 1 18.0751 1 12C1 5.92487 5.92487 1 12 1C18.0751 1 23 5.92487 23 12ZM21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" fill="currentColor" style="--darkreader-inline-fill: currentColor;" data-darkreader-inline-fill=""></path>
        </svg>
      </button>
    </form>
</div>
